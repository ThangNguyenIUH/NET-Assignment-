@page
@model Assign_Rookies.Pages.Categories.EditModel
<form method="post">
    <input asp-for="@Model.Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
             <h2 class="text-primary pl-3">Edit Category</h2>
        </div>    
        <hr/>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="@Model.Category.Name"></label>
        <input asp-for="@Model.Category.Name" class="form-control" />
        <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
    </div>
     <div class="mb-3">
       <label asp-for="@Model.Category.DisplayOrder"></label>
        <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
        <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
    </div>
    <div class="mb-3">
       <label asp-for="@Model.Category.CreatedDateTime"></label>
        <input asp-for="@Model.Category.CreatedDateTime" class="form-control" />
        <span asp-validation-for="@Model.Category.CreatedDateTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
    </div>
</form>
