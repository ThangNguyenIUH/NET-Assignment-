@page
@model Assign_Rookies.Pages.Categories.DeleteModel

<form method="post">
    <input hidden asp-for="Categories.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
             <h2 class="text-primary pl-3">Delete Category</h2>
        </div>    
        <hr/>
    <div asp-validation-summary="All"></div>
   <div class="mb-3">
        <label asp-for="@Model.Categories.Name"></label>
        <input asp-for="@Model.Categories.Name" class="form-control" />
        <span asp-validation-for="@Model.Categories.Name" class="text-danger"></span>
    </div>
     <div class="mb-3">
       <label asp-for="@Model.Categories.DisplayOrder"></label>
        <input asp-for="@Model.Categories.DisplayOrder" class="form-control" />
        <span asp-validation-for="@Model.Categories.DisplayOrder" class="text-danger"></span>
    </div>
    <div class="mb-3">
       <label asp-for="@Model.Categories.CreatedDateTime"></label>
        <input asp-for="@Model.Categories.CreatedDateTime" class="form-control" />
        <span asp-validation-for="@Model.Categories.CreatedDateTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
    <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>
</form>